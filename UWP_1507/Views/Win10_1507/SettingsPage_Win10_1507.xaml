<page:SettingsPageBase
    x:Class="DriveRPC.Shared.UWP.Views.SettingsPage_Win10_1507"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DriveRPC.Shared.UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:page="using:DriveRPC.Shared.UWP.Views"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="GroupPanelStyle"
               TargetType="StackPanel">
            <Setter Property="Background"
                    Value="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"/>
            <Setter Property="Padding"
                    Value="15"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="{ThemeResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="Margin"
                    Value="10"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Padding="20">
        <StackPanel Padding="15"
                    MaxWidth="800"
                    HorizontalAlignment="Center">

            <TextBlock Text="Settings"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Margin="0,0,0,10"/>

            <StackPanel x:Name="AppearanceStackPanel"
                        Style="{StaticResource GroupPanelStyle}">
                <TextBlock Text="Appearance"
                           Style="{StaticResource SubtitleTextBlockStyle}"/>

                <RadioButton Content="Windows 10 (1507)"
                             GroupName="AppearanceGroup"
                             Checked="AppearanceRadio_Checked"
                             Tag="1507"/>

                <RadioButton Content="Windows 10 (1709)"
                             GroupName="AppearanceGroup"
                             Checked="AppearanceRadio_Checked"
                             Tag="1709"/>

                <RadioButton Content="Windows 11"
                             GroupName="AppearanceGroup"
                             Checked="AppearanceRadio_Checked"
                             Tag="11"/>
            </StackPanel>

            <StackPanel Style="{StaticResource GroupPanelStyle}">
                <TextBlock Text="Discord User Token"
                           Style="{StaticResource SubtitleTextBlockStyle}"/>

                <PasswordBox x:Name="TokenBox"
                             PlaceholderText="Enter your Discord token"
                             PasswordChanged="TokenBox_PasswordChanged"
                             Margin="0,8,0,0"/>

                <CheckBox x:Name="ShowTokenCheck"
                          Content="Show token"
                          Margin="0,4,0,0"
                          Checked="ShowTokenCheck_Checked"
                          Unchecked="ShowTokenCheck_Unchecked"/>

                <Button Content="Save Token"
                        Margin="0,10,0,0"
                        Click="SaveToken_Click"
                        HorizontalAlignment="Stretch"/>

                <Button Content="Clear Token"
                        Margin="0,8,0,0"
                        Background="DarkRed"
                        Foreground="White"
                        Click="ClearToken_Click"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel Style="{StaticResource GroupPanelStyle}"
                        BorderBrush="Red">
                <TextBlock Text="Management"
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           Foreground="Red"/>

                <Button x:Name="BtnResetAllSettings"
                        Content="Reset All Settings"
                        Background="DarkRed"
                        Foreground="White"
                        HorizontalAlignment="Stretch"
                        Margin="0,8,0,0"/>
            </StackPanel>

            <StackPanel Style="{StaticResource GroupPanelStyle}">
                <TextBlock Text="Information"
                           Style="{StaticResource SubtitleTextBlockStyle}"/>

                <Button Content="About DriveRPC"
                        Margin="0,0,0,8"
                        Click="AboutButton_Click"/>

                <Button Content="Disclaimer &amp; Legal"
                        Click="DisclaimerButton_Click"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</page:SettingsPageBase>